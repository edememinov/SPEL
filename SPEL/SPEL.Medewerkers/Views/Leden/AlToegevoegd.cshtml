@model SPEL.Domain.Entities.Lid

@{
    ViewBag.Title = "AlToegevoegd";
}

<h2>Deze naam staat al geregistreerd in het systeem, weet u zeker dat u deze wilt toevoegen?</h2>

@Html.ValidationSummary(true)

@using (Html.BeginForm("LidAlsnogtoevoegen", "Leden", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Naam, "Volledige Naam", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Naam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Naam, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Geslacht, "Geslacht", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Geslacht, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Geslacht, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GebDatum, "GeboorteDatum", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10 date">
                @Html.EditorFor(model => model.GebDatum, new { htmlAttributes = new { @class = "form-control datetimepicker3" } })
                @Html.ValidationMessageFor(model => model.GebDatum, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Adres, "Adres", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Adres, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Woonplaats, "Woonplaats", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Woonplaats, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Woonplaats, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Telnr, "Tel", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Telnr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Telnr, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PassID, "IDnummer", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PassID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PassID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div style="position:relative;">
                <label>Pasfoto</label>
                <a class='btn' href='javascript:;'>
                    Choose File...
                    <input type="file" name="Image" size="40" style="position:absolute;z-index:2;top:0;
                left:0;filter: alpha(opacity=0); opacity:0; background-color:transparent;
                color:transparent;" onxx="" #upload-file-info").html($(this).val());'>
                </a>
                <span class='label label-info' id="upload-file-info"></span>
            </div>
        </div>
    </div>


    <div class="form-actions no-color">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Toevoegen" class="btn btn-default" />
            @Html.ActionLink("Terug naar het overzicht", "LedenBeheer", "Leden", htmlAttributes: new { @class = "btn btn-default" })
        </div>
    </div>


}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




