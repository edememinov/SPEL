@model SPEL.Leden.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Adres:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your adres", "ChangeAdres")
            }
            else
            {
                @Html.ActionLink("Create", "ChangeAdres")
            }
            ]
        </dd>
        <dt>Pasfoto:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your pasfoto", "ChangeAdres")
            }
            else
            {
                @Html.ActionLink("Create", "ChangeAdres")
            }
            ]
        </dd>
    </dl>
</div>
