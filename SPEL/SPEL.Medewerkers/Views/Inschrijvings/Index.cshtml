@model IEnumerable<SPEL.Domain.Entities.Inschrijving>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Schrijf een lid in", "InschrijvingCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.lid.Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sportklasse.naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.datumInschrijving)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.datumUitschrijving)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.lid.Naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sportklasse.naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datumInschrijving)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datumUitschrijving)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }) |

        </td>
    </tr>
}


</table>

@Html.ActionLink("Per periode", "PerPeriode", " ", htmlAttributes: new { @class = "btn btn-default"})
